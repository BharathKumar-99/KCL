<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Profile.ProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:elevation="20dp"
                android:foregroundGravity="center"
                android:src="@drawable/kscoa"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/pname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:drawablePadding="10dp"
                android:elevation="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:paddingStart="25dp"
                android:text="@android:string/unknownName"
                android:textColor="#000000"
                android:textSize="24sp"
                app:drawableTint="#388E3C" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:elevation="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="#E4DBDB"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="25dp">

            <TextView
                android:id="@+id/pemail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/buttonround"
                android:drawablePadding="10dp"
                android:elevation="20dp"
                android:padding="10dp"
                android:paddingStart="25dp"
                android:text="email"
                android:textColor="#1976D2"
                android:textSize="24sp"
                app:drawableStartCompat="@drawable/ic_baseline_email_24"
                app:drawableTint="#D32F2F" />

            <TextView
                android:id="@+id/pnumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/buttonround"
                android:drawablePadding="10dp"
                android:elevation="20dp"
                android:padding="10dp"
                android:paddingStart="25dp"
                android:text="TextView"
                android:textColor="#1976D2"
                android:textSize="24sp"
                app:drawableStartCompat="@drawable/ic_baseline_local_phone_24"
                app:drawableTint="#303F9F" />

            <TextView
                android:id="@+id/pblood"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/buttonround"
                android:elevation="20dp"
                android:padding="10dp"
                android:paddingStart="25dp"
                android:text="TextView"
                android:textColor="#1976D2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/paddar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/buttonround"
                android:elevation="20dp"
                android:padding="10dp"
                android:paddingStart="25dp"
                android:text="TextView"
                android:textColor="#1976D2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/buttonround"
                android:elevation="20dp"
                android:padding="10dp"
                android:paddingStart="25dp"
                android:text="TextView"
                android:textColor="#1976D2"
                android:textSize="24sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>